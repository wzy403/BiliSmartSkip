{
  "manifest_version": 3,
  "name": "Bilibili 广告跳过助手",
  "version": "1.1.0",
  "description": "通过识别弹幕跳过嵌入式广告段",
  "permissions": ["storage"],
  "host_permissions": ["https://www.bilibili.com/*", "https://comment.bilibili.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.bilibili.com/video/*"],
      "js": ["/scr/content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "/scr/popup.html"
  },
  "icons": {
    "48": "/scr/icon.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "bilismartskip@addon.dev",
      "strict_min_version": "109.0"
    }
  }
}
